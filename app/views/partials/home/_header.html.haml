%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} DS Beadery
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active
          %a{:href => "about"}
            About
            %span.sr-only (current)
        %li
          %a{:href => "products"} Products
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "basket", :role => "button"}
            Shopping Cart (
            = pluralize current_order.total_items, 'item'
            )
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li
              = link_to 'View Cart', basket_path
            %li.divider
            %li
              = link_to 'Empty Cart', basket_path, :method => :delete
    / /.navbar-collapse
  / /.container-fluid